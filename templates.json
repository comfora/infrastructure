{
    "version": "2",
    "templates": [
        {
            "type": 3,
            "title": "Newt Tunnel",
            "description": "Tunnelling service for Pangolin service.",
            "note": "Configure environment variables PANGOLIN_ENDPOINT, NEWT_ID, and NEWT_SECRET before deploying. See <a href=\"https://docs.pangolin.net\" target=\"_blank\" rel=\"noopener noreferrer\">docs.pangolin.net</a> for documentation relating to Pangolin and Newt Tunnel service.",
            "categories": ["VPNs & Proxies", "Enterprise Licensed"],
            "platform": "linux",
            "logo": "https://icons.comfora.org/pangolin/ffcc4d",
            "repository": {
                "url": "https://github.com/comfora/infrastructure",
                "stackfile": "docker/newt/docker-compose.yml"
            },
            "administrator_only": true,
            "env": [
                {
                    "name": "PANGOLIN_ENDPOINT",
                    "type": "text",
                    "title": "Pangolin Endpoint",
                    "description": "URL Endpoint that Pangolin is hosted on.",
                    "default": "https://pangolin.comfora.org",
                    "required": true
                },
                {
                    "name": "NEWT_ID",
                    "type": "text",
                    "title": "Newt ID",
                    "description": "Refer to site creation credentials for the Newt service ID.",
                    "required": true
                },
                {
                    "name": "NEWT_SECRET",
                    "type": "text",
                    "title": "Newt Secret",
                    "description": "Refer to site creation credentials for the Newt service secret.",
                    "required": true
                }
            ]
        },
        {
            "type": 3,
            "title": "Icons",
            "description": "Icon proxy service powered by selfh-st.",
            "note": "Configure environment variable PORT before deploying.",
            "categories": ["Utilities", "Public"],
            "platform": "linux",
            "logo": "https://icons.comfora.org/selfh.st/ffcc4d",
            "repository": {
                "url": "https://github.com/comfora/infrastructure",
                "stackfile": "docker/icons/docker-compose.yml"
            },
            "administrator_only": true,
            "env": [
                {
                    "name": "PORT",
                    "type": "text",
                    "title": "Port",
                    "description": "Port number for the Icons service.",
                    "default": "4000",
                    "required": true
                }
            ]
        }
    ]
}